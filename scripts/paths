#!/bin/bash

SCRIPT_FOLDER="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"


# General program folders

GRAPENLP_FOLDER=$SCRIPT_FOLDER/..
BUILD_FOLDER=$GRAPENLP_FOLDER/build
DEBUG_FOLDER=$BUILD_FOLDER/debug
RELEASE_FOLDER=$BUILD_FOLDER/release
MTRACE_FOLDER=$BUILD_FOLDER/mtrace
PROFILE_FOLDER=$BUILD_FOLDER/profile
DEBUG_BIN_FOLDER=$DEBUG_FOLDER/bin
RELEASE_BIN_FOLDER=$RELEASE_FOLDER/bin
MTRACE_BIN_FOLDER=$MTRACE_FOLDER/bin
PROFILE_BIN_FOLDER=$PROFILE_FOLDER/bin


# grapenlp executables

RELEASE_GRAPENLP=$RELEASE_BIN_FOLDER/grapenlp
DEBUG_GRAPENLP=$DEBUG_BIN_FOLDER/grapenlp
MTRACE_GRAPENLP=$MTRACE_BIN_FOLDER/grapenlp
PROFILE_GRAPENLP=$PROFILE_BIN_FOLDER/grapenlp


# Other executables

SIMPLIFY_TEMPLATES=$RELEASE_FOLDER/src/simplify_templates/simplify_templates
LRB_TREE_EFFICIENCY=$PROFILE_FOLDER/src/lrb_tree/lrb_tree_efficiency
LATEX_HBAR_CHART=$RELEASE_FOLDER/src/latex_hbar_chart/latex_hbar_chart
SPEEDUP_CALCULATOR=$RELEASE_BIN_FOLDER/speedup_calculator


# General input/output folders

DATA_FOLDER=$GRAPENLP_FOLDER/../data
UNITEX_DATA_FOLDER=$DATA_FOLDER/Unitex/Spanish
GRAMMAR_FOLDER=$UNITEX_DATA_FOLDER/Graphs
DICO_FOLDER=$UNITEX_DATA_FOLDER/Dela
CORPUS_FOLDER=$UNITEX_DATA_FOLDER/Corpus
THESIS_FOLDER=$GRAPENLP_FOLDER/../../papers/thesis_sastre
BENCHMARKS_FOLDER=$THESIS_FOLDER/benchmarks


# Input texts and corpora

A_INPUT=$CORPUS_FOLDER/a.txt
TEST_INPUT=$CORPUS_FOLDER/test.txt
CORPUS=$CORPUS_FOLDER/corpus.txt
CORPUS_NO_OUTPUT=$CORPUS_FOLDER/corpus_no_output.txt
CORPUS_NO_KEYWORD=$CORPUS_FOLDER/corpus_no_keyword.txt
CORPUS_NO_OUTPUT_NO_KEYWORD=$CORPUS_FOLDER/corpus_no_output_no_keyword.txt


# Input contexts

TEST_CONTEXT=$CORPUS_FOLDER/test_context.txt


# Input dictionaries

TEXT_DICO=$DICO_FOLDER/delaf.dic
TEXT_MINI_DICO=$DICO_FOLDER/delaf_mini.dic
COMPRESSED_DICO=$DICO_FOLDER/delaf_norm.bin
COMPRESSED_MINI_DICO=$DICO_FOLDER/delaf_mini.bin


# Input grammars

CHATBOT_GRAMMAR=$GRAMMAR_FOLDER/chatbot/axiom.fst2
CHATBOT_NO_KEYWORD_GRAMMAR=$GRAMMAR_FOLDER/chatbot/axiom_no_keyword.fst2
CHATBOT_FST_NO_KEYWORD_GRAMMAR=$GRAMMAR_FOLDER/chatbot/axiom_fst_no_keyword.fst2
TEST_GRAMMAR=$GRAMMAR_FOLDER/test/test.fst2
AEEE_GRAMMAR=$GRAMMAR_FOLDER/aeee/aeee.fst2
WAEEE_GRAMMAR=$GRAMMAR_FOLDER/waeee/waeee.fst2
ANBN_GRAMMAR=$GRAMMAR_FOLDER/anbn/anbn.fst2
WANBN_GRAMMAR=$GRAMMAR_FOLDER/wanbn/wanbn.fst2
DICO_TEST_GRAMMAR=$GRAMMAR_FOLDER/dico_test/dico_test.fst2


# Output analyses

OUTPUT=$DATA_FOLDER/result.txt
VALIDATE=$DATA_FOLDER/validate.txt
FILESTOCLEAR="$OUTPUT $VALIDATE"


# Output Graphviz DOTs

DOTGRAMMAR=$GRAPENLP_FOLDER/grammar.dot
DOTDIRTYPARSES=$GRAPENLP_FOLDER/dirty_parses.dot
DOTPARSES=$GRAPENLP_FOLDER/parses.dot
DOTINVPARSES=$GRAPENLP_FOLDER/inv_parses.dot
DOTRBTREE=$GRAPENLP_FOLDER/rb_tree.dot
DOTRBTREEDELETED=$GRAPENLP_FOLDER/rb_tree_deleted.dot
DOTLRBTREE=$GRAPENLP_FOLDER/lrb_tree.dot
DOTLRBTREEDELETED=$GRAPENLP_FOLDER/lrb_tree_deleted.dot
FILESTOCLEAR="$FILESTOCLEAR $DOTGRAMMAR $DOTDIRTYPARSES $DOTPARSES $DOTINVPARSES $DOTRBTREE $DOTRBTREEDELETED $DOTLRBTREE $DOTLRBTREEDELETED"


# Output Graphviz JPGs

JPGGRAMMAR=$GRAPENLP_FOLDER/grammar.jpg
JPGDIRTYPARSES=$GRAPENLP_FOLDER/dirty_parses.jpg
JPGPARSES=$GRAPENLP_FOLDER/parses.jpg
JPGINVPARSES=$GRAPENLP_FOLDER/inv_parses.jpg
FILESTOCLEAR="$FILESTOCLEAR $JPGGRAMMAR $JPGDIRTYPARSES $JPGPARSES $JPGINVPARSES"


# Output Graphviz SVGs

SVGGRAMMAR=$GRAPENLP_FOLDER/grammar.svg
SVGDIRTYPARSES=$GRAPENLP_FOLDER/dirty_parses.svg
SVGPARSES=$GRAPENLP_FOLDER/parses.svg
SVGINVPARSES=$GRAPENLP_FOLDER/inv_parses.svg
SVGRBTREE=$GRAPENLP_FOLDER/rb_tree.svg
SVGRBTREEDELETED=$GRAPENLP_FOLDER/rb_tree_deleted.svg
SVGLRBTREE=$GRAPENLP_FOLDER/lrb_tree.svg
SVGLRBTREEDELETED=$GRAPENLP_FOLDER/lrb_tree_deleted.svg
FILESTOCLEAR="$FILESTOCLEAR $SVGGRAMMAR $SVGDIRTYPARSES $SVGPARSES $SVGINVPARSES $SVGRBTREE $SVGRBTREEDELETED $SVGLRBTREE $SVGLRBTREEDELETED"
 

# Output statistic reports

STATS_TXT=$BENCHMARKS_FOLDER/stats.txt
STATS_NO_KEYWORD_TXT=$BENCHMARKS_FOLDER/stats_no_keyword.txt
STATS_FST_NO_KEYWORD_TXT=$BENCHMARKS_FOLDER/stats_fst_no_keyword.txt
STATS_TEX=$BENCHMARKS_FOLDER/stats.tex
STATS_NO_KEYWORD_TEX=$BENCHMARKS_FOLDER/stats_no_keyword.tex
STATS_FST_NO_KEYWORD_TEX=$BENCHMARKS_FOLDER/stats_fst_no_keyword.tex
FILESTOCLEAR="$FILESTOCLEAR $STATS_TXT $STATS_TEX $STATS_NO_KEYWORD_TXT $STATS_NO_KEYWORD_TEX $STATS_FST_NO_KEYWORD_TXT $STATS_FST_NO_KEYWORD_TEX"


# Output profiling reports

RAW_PROFILE_TRACE=$SCRIPT_FOLDER/gmon.out
TOP_DOWN_PROFILE_TRACE=$SCRIPT_FOLDER/top_down_prof.txt
BREADTH_FIRST_PROFILE_TRACE=$SCRIPT_FOLDER/breadth_first_prof.txt
EARLEY_PROFILE_TRACE=$SCRIPT_FOLDER/earley_prof.txt
TO_FPRTN_BF_PROFILE_TRACE=$SCRIPT_FOLDER/to_fprtn_bf_prof.txt
FILESTOCLEAR="$FILESTOCLEAR $RAW_PROFILE_TRACE $TOP_DOWN_PROFILE_TRACE $BREADTH_FIRST_PROFILE_TRACE $EARLEY_PROFILE_TRACE $TO_FPRTN_BF_PROFILE_TRACE"
